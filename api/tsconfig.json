{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./dist",
    "rootDir": "./lib",

    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,

    "esModuleInterop": true,
    "sourceMap": true,

    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
